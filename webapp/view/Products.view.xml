<mvc:View
    controllerName="testapp.freestyle.controller.Products"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    core:require="{ formatter:'testapp/freestyle/model/formatter'}"
>
    <Page
        title="{i18n>productstitle}"
        titleAlignment="Center"
        class="sapUiResponsiveContent"
    >
        <Table
            id="product"
            items="{ProductsModel>/Products}"
            growing="true"
            growingThreshold='18'
            autoPopinMode='false'
            growingScrollToLoad='true'
        >
            <!-- hiddenInPopin="Low" -->
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <VariantManagement
                            id="vm"
                            select="onselect"
                            save="onSave"
                            manage="onManage"
                            popoverTitle="{i18n>myfavourites}"
                            defaultKey="standard"
                            selectedKey="standard"
                        >
                            <items>
                                <VariantItem
                                    author="SAP"
                                    executeOnSelect='true'
                                    title="Standard"
                                    rename="false"
                                    key="standard"
                                />
                                <VariantItem
                                    author="Anil"
                                    executeOnSelect='false'
                                    title="Test1"
                                    rename="true"
                                    key="1"
                                    remove="true"
                                    sharing="Private"
                                    favorite='false'
                                />
                            </items>
                        </VariantManagement>
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://action-settings"
                            press="onSettingsPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>productName}" />
                </Column>
                <Column hAlign="Center">
                    <Text text="{i18n>supplierID}" />
                </Column>
                <Column
                    hAlign="Center"
                    demandPopin="true"
                    minScreenWidth="Desktop"
                >
                    <Text text="{i18n>unitsInStock}" />
                </Column>
                <Column
                    importance="Low"
                    demandPopin="false"
                    minScreenWidth="Phone"
                >
                    <Text text="{i18n>unitsOnOrder}" />
                </Column>
                <Column importance="High">
                    <Text text="{i18n>discontinued}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier text="{ProductsModel>ProductName}" />
                        <ObjectNumber
                            number="{ProductsModel>SupplierID}"
                            emphasized="false"
                        />
                        <ObjectNumber
                            number="{ProductsModel>UnitsInStock}"
                            unit="PC"
                            state="{ 
                                                                                          path:'ProductsModel>UnitsInStock',
                                                                                          formatter:'formatter.valueState'}"
                        />
                        <ObjectNumber
                            number="{ProductsModel>UnitsOnOrder}"
                            emphasized="false"
                            unit="PC"
                        />
                        <Text
                            class='customTextBold'
                            text="{
                                 path: 'ProductsModel>Discontinued',
                                 formatter:'formatter.getIsDiscountinued'}"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
